# English for Business - Environment Variables
# Copy this file to .env and fill in your values

# ===== Firebase Configuration =====
# Get these from Firebase Console: https://console.firebase.google.com
VITE_FIREBASE_API_KEY=your_firebase_api_key
VITE_FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
VITE_FIREBASE_DATABASE_URL=https://your_project.firebaseio.com
VITE_FIREBASE_PROJECT_ID=your_project_id
VITE_FIREBASE_STORAGE_BUCKET=your_project.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
VITE_FIREBASE_APP_ID=your_app_id
VITE_FIREBASE_MEASUREMENT_ID=G-your_measurement_id

# ===== AI Services Configuration =====
# Gemini AI (for business communication assistance)
VITE_GEMINI_API_KEY=your_gemini_api_key

# OpenAI (optional - for advanced features)
VITE_OPENAI_API_KEY=your_openai_api_key

# ===== App Configuration =====
VITE_APP_NAME="English for Business"
VITE_APP_SHORT_NAME="EngBiz"
VITE_APP_URL=https://your-domain.com

# ===== Feature Flags =====
VITE_ENABLE_AI_FEATURES=true
VITE_ENABLE_VOICE_RECOGNITION=true
VITE_ENABLE_ANALYTICS=true

# ===== Business Features =====
VITE_ENABLE_EMAIL_GRADER=true
VITE_ENABLE_MEETING_SIMULATOR=true
VITE_ENABLE_PRESENTATION_COACH=true
VITE_ENABLE_NEGOTIATION_PRACTICE=true

# ===== Development =====
VITE_DEBUG_MODE=false
VITE_LOG_LEVEL=info
