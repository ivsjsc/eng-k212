rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function signedIn() { return request.auth != null; }
    function isOwner(uid) { return signedIn() && request.auth.uid == uid; }
    function isAdmin() { return signedIn() && request.auth.token.admin == true; }

    // Users collection - each user can manage their own document
    match /users/{uid} {
      allow create: if signedIn();
      allow read, update, delete: if isOwner(uid) || isAdmin();
    }

    // Classes collection - teacher-doc schema (classes/{teacherId})
    // Each document contains all classes for that teacher
    match /classes/{teacherId} {
      allow read, write: if isOwner(teacherId) || isAdmin();
    }

    // Tests collection - allow test writes/reads for authenticated users (dev/testing)
    match /tests/{testId} {
      allow read, write: if signedIn();
    }
  }
}